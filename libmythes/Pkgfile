# Description: a simple thesaurus
# URL: http://hunspell.sourceforge.net/
# Maintainer: crux libreoffice team, tbier at posteo dot de
# Depends on:

name=libmythes
version=1.2.4
release=1
source=(http://downloads.sourceforge.net/hunspell/${name/lib/}-$version.tar.gz)

build() {
  cd mythes-$version
  ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install
}
