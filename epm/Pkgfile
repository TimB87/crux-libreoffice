# Description: ESP Package manager is a UNIX software and file packaging program
# URL: http://www.epmhome.org
# Maintainer: 
# Depends on:

name=epm
version=4.2
release=1
source=(http://ftp.funet.fi/pub/mirrors/ftp.easysw.com/pub/epm/4.2/epm-4.2-source.tar.gz)

build() {
	cd $name-$version
    ./configure --prefix=/usr
    make
    make exec_prefix=$PKG libdir=$PKG/usr/lib mandir=$PKG/usr/share/man docdir=$PKG/usr/share/doc install
}
