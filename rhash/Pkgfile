name=rhash
version=1.3.6
release=1
source=(https://downloads.sourceforge.net/$name/$name-$version-src.tar.gz)

build() {
	cd RHash-$version
    ./configure --prefix=/usr \
            --sysconfdir=/etc \
            --extra-cflags="$CFLAGS" \
            --extra-ldflags="$LDFLAGS"
    make
    make DESTDIR=$PKG install
}
