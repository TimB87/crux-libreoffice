# Description: Library for generating documents in Open Document Format
# URL: https://sourceforge.net/p/libwpd/wiki/libodfgen/
# Maintainer:
# Depends on: librevenge

name=libodfgen
version=0.1.7
release=1
source=(https://sourceforge.net/projects/libwpd/files/libodfgen/libodfgen-$version/$name-$version.tar.xz)

build() {
  cd $name-$version
  ./configure --prefix=/usr \
    --disable-werror
  make
  make DESTDIR=$PKG install
}
