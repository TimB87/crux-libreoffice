name=libcmis
version=0.5.2
release=1
source=(https://github.com/tdf/libcmis/releases/download/v${version}/$name-$version.tar.gz)

build() {
	cd $name-$version
    ./configure --prefix=/usr \
                --disable-werror \
                --with-man=no
    make
    make DESTDIR=$PKG install
}
